#!/bin/sh

# Run this script immediately after cloning the codebase.

DEFAULT_PORT=3000

# Set up npm dependencies
npm install -g nodemon gulp bower
npm install
bower install

DIR=$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )
cd $DIR/..

# Set up configurable environment variables for Foreman
if [ ! -f .env ]; then
  echo "NODE_ENV=development" > .env
  echo "PORT=$DEFAULT_PORT" >> .env
fi

# Create and migrate the database
createuser -s KALE_UNDERSCORED_NAME
createdb KALE_UNDERSCORED_NAME_development -U KALE_UNDERSCORED_NAME

kale migrate
