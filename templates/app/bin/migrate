#!/usr/bin/env node

'use strict';

const config = require('../config');
const Kale = require('kalejs');
const path = require('path');

let cli = new Kale.CLI.Migrate(config.db, path.join(__dirname, '..'));

cli
  .run(process.argv[2], process.argv[3])
  .then(function() {
    process.exit(0);
  })
  .catch(function(e) {
    console.log('Error');
    console.log(e);
    process.exit(-1);
  });
